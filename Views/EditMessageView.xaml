<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:views="clr-namespace:Jeffistance.Views"
             x:Class="Jeffistance.Views.EditMessageView">
    <Grid ColumnDefinitions="9*,1*" RowDefinitions="5*,5*" Margin="4">
    <Grid.Styles>
      <Style Selector="TextBox.h1">
          <Setter Property="Foreground" Value="White"/>
        </Style>
    </Grid.Styles>
    <TextBox AcceptsReturn="False" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
     IsEnabled="True" Text="{Binding Content}" Name="MessageContentBox" Classes="h1"/>
    <Button Grid.Row="0" Grid.Column="1" Command="{Binding OnOkClicked}">OK</Button>
    <Button Grid.Row="1" Grid.Column="1" Command="{Binding OnCancelClicked}">Cancel</Button>
  </Grid>
</UserControl>