<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jeffistance.Views.ChatMessageView">
  <Grid ColumnDefinitions="9*,1*" RowDefinitions="5*,5*" Margin="4">
    <TextBox AcceptsReturn="True"
             Grid.Row="0"
             Grid.Column="0"
             Grid.RowSpan="2"
             IsReadOnly="True"
             Text="{Binding Content}"
             TextWrapping="Wrap"
             Name="MessageContentBox"/>
    <Button Grid.Row="0" Grid.Column="1" Command="{Binding OnDeleteClicked}">X</Button>
    <Button Grid.Row="1" Grid.Column="1" Command="{Binding OnEditClicked}" Name="EditButton">E</Button>
  </Grid>
</UserControl>