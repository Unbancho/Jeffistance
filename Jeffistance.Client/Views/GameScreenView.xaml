<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jeffistance.Client.Views.GameScreenView"
             xmlns:views="clr-namespace:Jeffistance.Client.Views"
             xmlns:vm="clr-namespace:Jeffistance.Client.ViewModels;assembly=Jeffistance.Client">
   <Grid ColumnDefinitions="8*,0.5*,0.5*,1*" RowDefinitions="3.5*,0.5*,6*" Margin="4">
      <UserControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="{Binding PlayerArea}"/>
      <TextBox Text="{Binding RoundBox}" IsEnabled="False" TextWrapping="Wrap" Grid.Row="1" Grid.Column="0"/>
      <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Command="{Binding OnOkClicked}" IsVisible="{Binding EnableOKBtn}">OK</Button>
      <Button Grid.Row="1" Grid.Column="1" Command="{Binding OnYesClicked}" IsVisible="{Binding EnableVotingBtns}">YES</Button>
      <Button Grid.Row="1" Grid.Column="2" Command="{Binding OnNoClicked}" IsVisible="{Binding EnableVotingBtns}">NO</Button>
      <UserControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="{Binding ChatView}"/>
      <UserControl Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" Content="{Binding ScorePanel}"/>
   </Grid>
</UserControl>
